
<%= simple_form_for(@employee) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
<div class="container">
  <div class="form-inputs">
    <%= f.input :firstname %>
    <%= f.input :lastname %>
    <%= f.input :email %>
    <%= f.input :gender, :collection => %w[Male Female] %>
    <%= f.input :phone %>
    <%= f.input :address %>
    <%= f.input :employee_id %>
    <%= f.input :department, :collection => %w[IT Tester Developer Designer] %>
    <%= f.input :picture, id: :employee_picture %>

  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-outline-success"%>
  </div>
</div>
<% end %>
