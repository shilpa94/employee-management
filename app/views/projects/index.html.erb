<div class="container">
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Details</th>
      </tr>
    </thead>
    <tbody>
      <% @project.each do |project| %>
        <tr>
          <td><%= project.name %></td>
          <td><%= project.details %></td>
          <td><%= link_to 'show',project_path(project) %>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%# if !current_employee.has_role? :admin %> 
  <%= link_to 'New ', new_project_path , class:"btn btn-outline-dark" %>
  <%# end %>
</div>

