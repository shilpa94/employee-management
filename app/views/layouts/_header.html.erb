<div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
  <h3 style="color:#808080" class="my-0 mr-md-auto font-weight-normal">Employee Management</h3>

  <% if employee_signed_in? %>
    <nav class="nav-item dropdown">
      <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <%= current_employee.email %>
      </a>
      <div class="dropdown-menu" aria-labelledby="navbarDropdown">
        <%= link_to 'Edit profile', edit_employee_registration_path, class: 'dropdown-item' %>
        <%= link_to "Logout", destroy_employee_session_path, method: :delete, class: 'dropdown-item' %>
      </div>
    </nav>
  <% end %>

</div>
